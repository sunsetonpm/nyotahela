{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/api/verify-payment.php" },
    { "src": "/(.*)", "dest": "/api/normalize-phone.php" },
    { "src": "/(.*)", "dest": "/api/initiate-payment.php" },
    { "src": "/(.*)", "dest": "/api/callback.php" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
