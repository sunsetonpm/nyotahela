{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    { "src": "/eligibility", "dest": "/eligibility.html" },
    { "src": "/apply", "dest": "/apply.html" },
    
    { "handle": "filesystem" },
    
    { "src": "/verify", "dest": "/api/verify-payment.php" },
    { "src": "/pay", "dest": "/api/initiate-payment.php" },
    { "src": "/normalizephone", "dest": "/api/normalize-phone.php" },
    { "src": "/callback", "dest": "/api/callback.php" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
